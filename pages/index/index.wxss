/**index.wxss**/

/*Public Css*/
.text-overflow {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/*头部*/
.header {
    width: 100%;
    height: 44px;
    background: #31c27c;
    overflow: hidden;
}

.header image {
    width: 90px;
    height: 25px;
    margin: 9px 0 0 10px;
    float: left;
}

.header button {
    float: right;
    height: 28px;
    line-height: 28px;
    padding: 0 12px;
    background: #149c5a;
    border-radius: 99px;
    color: #fff;
    font-size: 14px;
    margin: 8px 10px 0 0;
}


/*导航*/
.nav {
    width: 100%;
    height: 40px;
    line-height: 40px;
    display: flex;
}
    .nav text{
        display: block;
        flex: 1;
        text-align: center;
        font-size: 16px;
    }
    .nav text.active {
        color: #31c27c;
        box-shadow: inset 0 -2px 0 #31c27c;
    }

/*设置轮播图图片的样式*/
.slide-image {
    width: 100%;
    height: 150px;
}


.wraper {
    background: #f4f4f4;
}

.tui-title {
    display: block;
    font-size: 16px;
    height: 24px;
    line-height: 24px;
    color: #000;
    margin-bottom: 10px;
}

.tui-block {
    margin: 10px;
}

.radio-block {
    display: flex;
    /*设置换行的*/
    flex-wrap: wrap;
}

.radio-block>view {
    width: 50%;
    box-sizing: border-box;
}

.radio-block>view:nth-child(odd) {
    padding-right: 4px;
}
.radio-block>view:nth-child(even) {
    padding-left: 4px;
}

.radio-block image {
    width: 100%;
    height: 146px;
}

.tui-content {
    padding: 5px 7px 5px;
    background: #fff;
}
.radio-block text.h3 {
    font-size: 16px;
    height: 36px;
    line-height: 18px;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.radio-block text.span {
    font-size: 12px;
    color: #000;
}

.mb10 view{
    margin-bottom: 10px;
}



.loading {
    width: 100px;
    height: 100px;
    display: block;
    margin: 60px auto 50px;
}


/*排行榜*/
.pai-list {
    margin: 10px;
    height: 100px;
    overflow: hidden;
    display: -webkit-box;
}

.pai-pic {
    width: 100px;
    height: 100%;
    position: relative;
}
    .pai-pic image {
        width: 100%;
        height: 100%;  
    }
    .listen-num {
        display: block;
        position: absolute;
        bottom: 7px;
        left: 5px;
        padding-left: 12px;
        background: url('../../img/erji.png') no-repeat 0 1px ;
        background-size: 20%;
        font-size: 9px;
        color: #fff;
        height: 12px;
        line-height: 12px;
        vertical-align: middle;
    }

.pai-song {
    -webkit-box-flex: 1;
    height: 100%;
    padding: 0 10px 0 15px;
    box-sizing: border-box;
    background: #fff;
    position: relative;
}
    .song-type {
        display: block;
        font-size: 16px;
        color: #000;
        margin-bottom: 5px;
        line-height: 24px;

    }
    .song-list {
        font-size: 14px;
        color: rgba(0,0,0,.5);
        line-height: 21px;
    }
        .song-list text {
            color: #000;
            margin-left: 8px;
            margin-right: 5px;
        }
    .arrow-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        width: 6px;
        height: 6px;
        margin-top: -3px;
        border-right: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        transform: rotate(-45deg);
    }




/*搜索*/
 .search {
     margin: 10px;
     background: #fff;
     height: 36px;
     overflow: hidden;
     position:relative;
 }
    .search image {
        float: left;
        width: 18px;
        height: 18px;
        margin: 9px 8px 0 10px;
    }
    .search input {
        width: calc(100% - 84px);
        height: 20px;
        line-height: 20px;
        color: rgba(0,0,0,.3);
        margin-top: 8px;
        font-size: 14px;
        float: left;
        min-height: auto!important;
    }
    .search icon {
        position: absolute;
        right: 60px;
        top: 9px;
        z-index: 9;
    }
.placeholder {
   color: rgba(0,0,0,.3);
}

.cancel-button {
    float: right;
    width: 48px;
    height: 36px;
    text-align: center;
    line-height: 36px;
    font-size: 14px;
    color: #555;
    background: #f4f4f4;
    margin-top: 0;
}



/*热门搜索*/
.hot-block {
    padding: 15px 15px 10px 15px;
    background: #fff;
}
.hot-title {
    display: block;
    font-size: 14px;
    line-height: 21px;
    color: rgba(0,0,0,.6);
    margin-bottom: 8px;
    font-weight: 700;
}

.none-tap {
    -wekit-tap-hight-light-color: rgba(0,0,0,0);
}

.hot-button {
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    border-radius: 99px;
    border: 1px solid rgba(0,0,0,.6);
    display: inline-block;
    margin-bottom: 10px;
    margin-right: 14px;
    font-size: 14px;
}


.special {
    color: #fc4524;
    border-color: #fc4524;
}


.search-list {
    width: 100%;
    height: 55px;
    background: #fff;
    border-top: 1px solid #e5e5e5;
}
    .search-list span {
        display: block;
        width: 22px;
        height: 20px;
        background: url('../../img/search_sprite.png') no-repeat 0 0;
        background-size: 90%;
        float: left;
        margin: 23px 17px 0;
    }
    .song-title {
        display: block;
        margin: 10px 0 2px;
        line-height: 18px;
        font-size: 16px;
        font-weight: normal;
        color: #000;
    }
    .singer {
        font-size: 12px;
        color: #808080;
    }