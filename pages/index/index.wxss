/**index.wxss**/


.header {
  width: 100%;
  height:44px;
  background: #31c27c;
}

.logo {
    float: left;
    display: block;
    width: 90px;
    height: 25px;
    margin: 9px 0 0 10px;
    background: url(../../img/logo.png) no-repeat;
    background-size: cover;
    text-indent: -9999px;
}

.download {
    position: absolute;
    display: inline-block;
    right: 10px;
    top: 8px;
    height: 28px;
    padding: 0 12px;
    line-height: 28px;
    border-radius: 99px;
    font-size: 14px;
    background: #149c5a;
    color: #fff;
}

.swiper {
  width:100%
}

.tab-nav {
  width: 100%;
  background: #fff;
  display:flex;
}

.tab-nav text {
  height: 40px;
  line-height: 40px;
  display: block;
  flex: 1;
  text-align: center;
}

.tab-nav text.active {
  border-bottom: 2px solid #31c27c;
  color: #31c27c;
}

swiper {
  width: 100%;
}

.top-list {
  width: 100%;
  margin: 10px;
}

.item navigator {
  display: -webkit-box;
  background: #fff;
  margin-bottom: 10px;
  overflow:hidden;
}

.item image {
  width: 100px;
  height: 100px;
  display: block;
}

.topic-info {
  -webkit-box-flex: 1;
  display: -webkit-box;
  position: relative;
  -webkit-box-align: center;
    -webkit-box-pack: center;
}

.topic-content {
  -webkit-box-flex: 1;
  margin: 0 10px 0 15px;
}

.topic-title {
  font-size: 16px;
  color: #000;
  font-weight: normal;
  margin-bottom: 5px;
  display: block;
}

.topic-song, .topic-title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.topic-song {
  font-size: 14px;
  color: rgba(0,0,0,.5);
}

.topic-name {
  color: #000;
  margin-left: 8px;
  margin-right: 5px;
}

.arrow {
    position: absolute;
    right: 10px;
    top: 50%;
    margin-top: -4px;
    width: 6px;
    height: 6px;
    border-right: 1px solid #b2b2b2;
    border-bottom: 1px solid #b2b2b2;
    -webkit-transform: rotate(-45deg);
}